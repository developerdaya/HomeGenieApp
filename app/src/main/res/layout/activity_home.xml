<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16sp"
    tools:context=".ui.m1.HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout2"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-10dp"
        android:src="@drawable/home_logo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/montserrat_regular"
        android:letterSpacing="0.3"
        android:text="@string/app_name"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/mLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Logout"
            android:textSize="20sp"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/mAddress2"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />



        <TextView
        android:id="@+id/mAddress1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16sp"
        android:drawableStart="@drawable/location1"
        android:drawablePadding="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_vertical"
        android:text="C 144, Noida Uttar Pradesh"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/mAddress2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="C 142, Noida Uttar Pradesh, 201301"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mAddress1" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/mEditSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_round_bg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:maxLength="20"
        android:paddingVertical="13dp"
        android:fontFamily="@font/montserrat_medium"
        android:drawableStart="@drawable/baseline_search_1"
        android:layout_marginHorizontal="16sp"
        android:paddingStart="16sp"
        android:textSize="15sp"
        android:drawablePadding="5dp"
        android:hint="@string/search_for_ac_services"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mAddress2"

        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mViewPager2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/mEditSearch" />

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/mDotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/gray"
        android:layout_marginTop="10dp"
        app:dotsSize="10dp"
        android:focusableInTouchMode="false"
        app:dotsSpacing="6dp"
        app:progressMode="false"
        android:clickable="false"
        android:contextClickable="false"
        android:allowClickWhenDisabled="true"
        android:focusable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mViewPager2"
        app:selectedDotColor="@color/blue" />








    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBeauty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        app:spanCount="3"
        tools:itemCount="6"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/mDotsIndicator"
        tools:layout_editor_absoluteX="18dp"
        tools:listitem="@layout/layout_beauty" />



    <TextView
        android:id="@+id/mCleaning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16sp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center_vertical"
        android:text="Cleaning &amp; Pest contro;"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvBeauty" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCleaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/mCleaning"
        tools:layout_editor_absoluteX="18dp"
        tools:listitem="@layout/layout_cleaning" />




    <TextView
        android:id="@+id/mMassage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16sp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center_vertical"
        android:text="Massage for Men"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvCleaning" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/mMassage"
        tools:layout_editor_absoluteX="18dp"
        tools:listitem="@layout/layout_cleaning" />











</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_bottom"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@id/home"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:src="@drawable/home1"
            app:layout_constraintEnd_toStartOf="@+id/beauty"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/home"
            app:layout_constraintStart_toStartOf="@+id/home"
            app:layout_constraintTop_toBottomOf="@+id/home" />

        <ImageView
            android:id="@id/beauty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:src="@drawable/spa11"
            app:layout_constraintEnd_toStartOf="@+id/services"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/home"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Beauty"
            android:textColor="@color/gray"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/beauty"
            app:layout_constraintStart_toStartOf="@+id/beauty"
            app:layout_constraintTop_toBottomOf="@+id/beauty" />


        <ImageView
            android:id="@id/services"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:src="@drawable/settings"
            app:layout_constraintEnd_toStartOf="@+id/account"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/beauty"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="services"
            android:textColor="@color/gray"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/services"
            app:layout_constraintStart_toStartOf="@+id/services"
            app:layout_constraintTop_toBottomOf="@+id/services" />


        <ImageView
            android:id="@id/account"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:src="@drawable/people"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/services"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Account"
            android:textColor="@color/gray"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/account"
            app:layout_constraintStart_toStartOf="@+id/account"
            app:layout_constraintTop_toBottomOf="@+id/account" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>